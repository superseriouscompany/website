<section class="apps">
  <h4>In Progress</h4>

  <div class="grid">
    <% @active_projects.each do |p| %>
      <div class="app">
        <a href="/projects/<%= p.slug%>">
          <img src="https://placehold.it/420x420" />
          <div class="name">
            <%= p.name %>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</section>
<section class="apps">
  <h4>Finished</h4>

  <div class="grid">
    <% @finished_projects.each do |p| %>
      <div class="app">
        <a href="/projects/<%= p.slug%>">
          <img src="https://placehold.it/69x69" />
          <div class="name">
            <%= p.name %>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</section>
