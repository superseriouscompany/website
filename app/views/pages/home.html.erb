<h2>Cache Stats</h2>

<table>
  <tr>
    <th>Metric</th>
    <th>Value</th>
  </tr>
  <tr>
    <td>Cache hits:</td>
    <td><%= @stats['get_hits'] %></td>
  </tr>
  <tr>
    <td>Cache misses:</td>
    <td><%= @stats['get_misses'] %></td>
  </tr>
  <tr>
    <td>Cache flushes:</td>
    <td><%= @stats['cmd_flush'] %></td>
  </tr>
</table>

<section>
  <div class="chevrons">
    <a class="chevron down" title="Go to top of page"></a>
    <a class="chevron up" title="Go to bottom of page"></a>
  </div>

  <% @days.each do |day| %>
    <article class="day">
      <h2>
        <%= day.portuguese_title %> (<%=day.english_title%>)
      </h2>
      <%= image_tag day.image_url %>
      <div class="quotes">
        <blockquote class="santi">
          <%= raw day.santi_quote %>
        </blockquote>

        <blockquote class="neil">
          <%= raw day.neil_quote %>
        </blockquote>
      </div>
    </article>
  <% end %>
</section>
