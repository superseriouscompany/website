<section class="context">
  <p>
    Plot: Homeless guy and his boss quit jobs and randomly move to Portugal.
  </p>
  <p>
    Here's what happened today:
  </p>
</section>

<section class="story">
  <% day = @day %>
  <% cache day do %>
    <article class="day">
      <%= image_tag day.image_url, class: "comic" %>
      <div class="quotes">
        <blockquote class="santi">
          <%= raw day.santi_quote %>
          <%= image_tag "chatBubble.jpg", class: "chatBubble" %>
        </blockquote>

        <blockquote class="neil">
          <%= raw day.neil_quote %>
          <%= image_tag "chatBubble.jpg", class: "chatBubble" %>
        </blockquote>
      </div>
    </article>
  <% end %>
</section>
