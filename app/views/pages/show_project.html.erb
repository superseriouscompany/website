<section class="context">
  <%= raw @project.description %>

  <div class="links">
    <% if @project.url.present? %>
      <div class="link">
        <a href="<%= @project.url %>"><%= @project.link %></a>
      </div>
    <% end %>

    <% if @project.app_store_url.present? %>
      <div class="link">
        <a href="<%= @project.app_store_url %>">
          <%= image_tag "appStoreIcon.jpg" %>
        </a>
      </div>
    <% end %>

    <% if @project.play_store_url.present? %>
      <div class="link">
        <a href="<%= @project.play_store_url %>">
          <%= image_tag "playStoreIcon.jpg" %>
        </a>
      </div>
    <% end %>

    <% if @project.mac_app_store_url.present? %>
      <div class="link">
        <a href="<%= @project.mac_app_store_url %>">
          <%= image_tag "appStoreIcon.jpg" %>
        </a>
      </div>
    <% end %>
  </div>
</section>

<section class="project">
  <h2>Our Latest Update</h2>

  <% update = @progress_updates.first %>

  <article class="progressUpdate">
    <% if update.image_url.match(/\.gif/)  %>
      <%= image_tag update.image_url, class: 'screenshot gif' %>
    <% else %>
      <%= image_tag update.image_url, class: 'screenshot' %>
    <% end %>
    <div class="description">
      <%= raw update.description %>
    </div>
  </article>

  <div class="grid">
    <% @progress_updates.each do |update| %>
      <% if update.image_url.match(/\.gif/)  %>
        <div class="update gif">
          <a href="javascript:alert('nope')">
            <img src="https://placehold.it/450x450" />
          </a>
        </div>
      <% else %>
        <div class="update">
          <a href="javascript:alert('nope')">
            <img src="https://placehold.it/420x420" />
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
</section>

<div class="lightbox">
  <div class="top">
    1/69
  </div>

  <div class="main progressUpdate">
    <h2><%= update.created_at.strftime('%-d %b %Y') %></h2>
    <% if update.image_url.match(/\.gif/)  %>
      <%= image_tag update.image_url, class: 'screenshot gif' %>
    <% else %>
      <%= image_tag update.image_url, class: 'screenshot' %>
    <% end %>
    <div class="description">
      <%= raw update.description %>
    </div>
  </div>

  <div class="bottom">
    <a class="left">&lt;</a>
    <a class="close">close this thing</a>
    <a class="right">&gt;</a>
  </div>
</div>
