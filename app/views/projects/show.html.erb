<section class="context">
  <%= @project.description %>
  <div class="link">
    <a href="<%= @project.link%>"><%= @project.link %></a>
  </div>
</section>

<section class="story">
  <% @project.days.each do |day| %>
    <article class="day">
      <h2><%= day.portuguese_title %> (<%= day.english_title %>)</h2>
      <%= image_tag day.image_url, class: "comic" %>
      <div class="quotes">
        <blockquote class="santi">
          <%= raw day.santi_quote %>
          <%= image_tag "chatBubble.jpg", class: "chatBubble" %>
        </blockquote>

        <blockquote class="neil">
          <%= raw day.neil_quote %>
          <%= image_tag "chatBubble.jpg", class: "chatBubble" %>
        </blockquote>
      </div>
    </article>
  <% end %>
</section>
